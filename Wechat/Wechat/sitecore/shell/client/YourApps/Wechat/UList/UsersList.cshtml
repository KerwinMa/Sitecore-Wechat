@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@model RenderingModel
@{
  var rendering = Html.Sitecore().Controls().GetUserControl(Model.Rendering);
  rendering.Class = "sc-UsersList";
  rendering.Requires.Script("client", "UsersList.js");
  rendering.GetString("input", "input");
  var htmlAttributes = rendering.HtmlAttributes;
}
    
@*<link href=”//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css” rel=”stylesheet”>*@
<script src="/Script/Wechat/bootstrap.min.js" type="text/javascript"></script>
    
<link href="/Script/Wechat/bootstrap.css" rel="stylesheet">
<div  @htmlAttributes>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>头像</th>
                <th>昵称</th>
                <th>性别</th>
                <th>关注时间</th>
                <th style="width: 15%">操作</th>
            </tr>
        </thead>
        <tbody data-bind="foreach:output">
            <tr>
                <td><a data-bind="attr: { href: '/sitecore/client/Your Apps/Wechat/SendMessage?openid=' + openid, title: nickname }"><img data-bind="    attr: { src: headimgurl, alt: nickname }" style="width:48px;height:48px"/></a></td>
                <td><a data-bind="attr: { href: '/sitecore/client/Your Apps/Wechat/SendMessage?openid=' + openid, title: nickname }"><label data-bind="    text: nickname"></label></a></td>
                <td data-bind="text:sex"></td>
                <td data-bind="text: subscribe_time"></td>
                <td style="width: 15%"><button  onclick="Sitecore.app.UsersList1.setpreview(this);" data-bind="value: openid">设为预览用户</button></td>
            </tr>
        </tbody>
    </table>
    <div class="pagination" data-bind="foreach: pager">
        
        <ul>
            <li >
                <a href="#" data-bind="text: number" onclick="Sitecore.app.UsersList1.getusers(this.text);">
                
                </a>
            </li>
        </ul>
    </div>
</div>